@import "jeet"
@import "rupture"
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,400,700');

// edit()

// color pallete
color-bg-edx = #D6D6D6
color-bg-card = #FFF
color-text-title = #3C3C3C
color-text-content = #666
color-primary = #1D9DD9
color-success = #45D91D
color-error = #D9321D

// helpers
border(suffix)
  border{suffix} 1px solid #AAA

boxshadow()
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)

unselectable()
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

// main
*
  box-sizing border-box

body
  background-color color-bg-edx
  font-family 'Open Sans', Verdana, Geneva, sans-serif
  margin 0

// fake edX main navbar
header
  height 60px
  width 100%
  padding 10px
  background-color color-bg-card
  overflow hidden
  border('-bottom')
  boxshadow()

.main-nav
  center(1200px)
  font-size 14px
  height 40px
  line-height 40px
  span
    display inline-block

.logo
  padding 0 15px 0 15px

.provider
  padding-left 15px
  border('-left')
  color color-text-title
  font-weight bold
  vertical-align text-bottom

.course
  color color-text-content
  vertical-align text-bottom

// content
.content
  center(1180px)
  +below(768px)
    center(600px)
  margin-top 100px

.card
  col(1/2)
  +below(768px)
    stack()
  border-radius 5px
  background-color color-bg-card
  border('')
  boxshadow()
  padding 10px

.card-header
  border('-bottom')
  color color-text-title
  font-weight 300

.card-content
  color color-text-content

// progress donut chart
#progress
  svg, .chart-options
    center()
  *
    unselectable()

.arc-bg
  stroke color-bg-card
  fill color-bg-edx

.arc-fg
  fill color-primary
